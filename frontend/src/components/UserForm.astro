<div class="user-card">
  <h2>üöÄ Registro Sinton√≠a</h2>
  <form id="registerForm">
    <div class="input-group">
      <label for="username">Nombre de Usuario</label>
      <input type="text" id="username" name="username" placeholder="Ej. Neo" autocomplete="username" required />
    </div>
    <div class="input-group">
      <label for="password">Contrase√±a</label>
      <input type="password" id="password" name="password" placeholder="M√≠nimo 8 caracteres" autocomplete="new-password" required />
    </div>
    <button type="submit">Conectar a la Matrix</button>
  </form>
  <p id="statusMessage"></p>
</div>

<script>
  import { API_BASE_URL } from '../config';
  const form = document.getElementById('registerForm');
  const message = document.getElementById('statusMessage');

  if (form && message) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      message.textContent = "Procesando...";
      message.style.color = "#fbbf24";

      const formData = new FormData(e.target as HTMLFormElement);
      const data = Object.fromEntries(formData);

      try {
        const response = await fetch(`${API_BASE_URL}/users`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          const resData = await response.json();
          message.textContent = `‚úÖ Usuario creado: ${resData.username}. Redirigiendo...`;
          message.style.color = '#4ade80';
          setTimeout(() => {
            window.location.href = '/login/';
          }, 2000);
        } else {
          const errorText = await response.text();
          message.textContent = `‚ùå ${errorText}`;
          message.style.color = '#f87171';
        }
      } catch (error) {
        console.error(error);
        message.textContent = '‚ùå Error de conexi√≥n con el N√∫cleo';
        message.style.color = '#f87171';
      }
    });
  }
</script>

<style>
  .user-card { background: #1f2937; color: white; padding: 2rem; border-radius: 1rem; max-width: 400px; margin: 2rem auto; font-family: system-ui; }
  .input-group { margin-bottom: 1rem; }
  label { display: block; margin-bottom: 0.5rem; color: #9ca3af; }
  input { width: 100%; padding: 0.5rem; border-radius: 0.25rem; border: 1px solid #374151; background: #111827; color: white; }
  button { background: #6366f1; color: white; border: none; padding: 0.75rem; width: 100%; border-radius: 0.25rem; cursor: pointer; font-weight: bold; }
  button:hover { background: #4f46e5; }
</style>