---
import DashboardLayout from '../components/layout/dashboard-layout.astro';
import { Card, CardHeader, CardTitle, CardDescription, CardContent, Button } from '../components/ui';
import { api } from '../lib/api';
import { formatDate } from '../lib/utils';
import type { AuditLog, StatsData } from '../types';

export const prerender = false;

const { user } = Astro.locals;
const isAdmin = user.role === 'Admin';

let adminData: {
  stats: StatsData;
  recentLogs: AuditLog[];
} | null = null;

if (isAdmin) {
  try {
    const token = Astro.cookies.get('auth_token')?.value || Astro.cookies.get('session')?.value;
    const [statsData, logsData] = await Promise.all([
      api.getStats(token),
      api.getAuditLogs({ limit: 5 }, token)
    ]);
    adminData = {
      stats: statsData,
      recentLogs: Array.isArray(logsData?.data) ? logsData.data : [],
    };
  } catch (error) {
    console.error("Error fetching admin data:", error);
    // Data will be null and the view will show an error state
  }
}
---

<DashboardLayout 
  title="Dashboard" 
  description={`Bienvenido de nuevo, ${user.username || 'usuario'}.`}
  currentPath="/dashboard/"
>
  {isAdmin ? (
    // Admin View
    <div id="admin-view">
      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4 mb-6">
        <Card>
          <CardHeader class="flex flex-row items-center justify-between space-y-0 pb-2">
            <CardTitle class="text-sm font-medium text-muted-foreground">Total Usuarios</CardTitle>
            {/* Icon */}
          </CardHeader>
          <CardContent>
            <div class="text-2xl font-bold">{adminData?.stats.total_users ?? '-'}</div>
            <p class="text-xs text-muted-foreground">Usuarios registrados</p>
          </CardContent>
        </Card>
        <Card>
          <CardHeader class="flex flex-row items-center justify-between space-y-0 pb-2">
            <CardTitle class="text-sm font-medium text-muted-foreground">Tu Rol</CardTitle>
            {/* Icon */}
          </CardHeader>
          <CardContent>
            <div class="text-2xl font-bold">{user.role}</div>
            <p class="text-xs text-muted-foreground">Nivel de acceso</p>
            <div class="mt-4">
              <Button href="/dashboard/settings" variant="outline" size="sm" class="w-full">
                Ver Perfil
              </Button>
            </div>
          </CardContent>
        </Card>
        {/* Other stats cards can be added here */}
      </div>

      <div class="grid gap-6 md:grid-cols-2">
        <Card>
          <CardHeader>
            <CardTitle>Actividad Reciente</CardTitle>
            <CardDescription>Últimas acciones en el sistema</CardDescription>
          </CardHeader>
          <CardContent>
            <div class="space-y-4">
              {adminData && adminData.recentLogs.length > 0 ? (
                adminData.recentLogs.map(log => (
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-sm font-medium">{log.action}</p>
                      <p class="text-xs text-muted-foreground">por {log.admin_username || 'Sistema'}</p>
                    </div>
                    <span class="text-xs text-muted-foreground">{formatDate(log.timestamp)}</span>
                  </div>
                ))
              ) : (
                <p class="text-sm text-muted-foreground">No hay actividad reciente o hubo un error al cargarla.</p>
              )}
            </div>
          </CardContent>
        </Card>
        {/* Other cards can be added here */}
      </div>
    </div>
  ) : (
    // User View
    <div id="user-view" class="max-w-2xl mx-auto text-center py-12">
      <h2 class="text-2xl font-bold mb-2">¡Bienvenido!</h2>
      <p class="text-muted-foreground mb-6">
        Has iniciado sesión correctamente en el sistema Sintonía 3026.
      </p>
      <Card>
        <CardHeader><CardTitle>Tu Perfil</CardTitle></CardHeader>
        <CardContent>
          <p class="text-sm text-muted-foreground">Usuario: {user.username}</p>
          <p class="text-sm text-muted-foreground">Rol: {user.role}</p>
          <div class="mt-4">
            <Button href="/dashboard/settings" variant="outline" class="w-full">
              Ver Perfil
            </Button>
          </div>
        </CardContent>
      </Card>
    </div>
  )}
</DashboardLayout>
