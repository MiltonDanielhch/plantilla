---
import '../../styles/globals.css'
import Sidebar from './sidebar.astro'
import Header from './header.astro'
import Toast from '../ui/Toast.astro'
import { CommandMenu } from '../ui/command-menu.tsx'

interface Props {
  title: string
  description?: string
  currentPath: string
}

const { title, description, currentPath } = Astro.props

const user = Astro.locals.user;

// Redirección de seguridad por si el middleware fallara o para rutas no protegidas explícitamente
if (!user || !user.isAuthenticated) {
  return Astro.redirect('/login');
}

const isAdmin = user?.role === 'Admin';
---

<!DOCTYPE html>
<html lang="es" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | Sintonía 3026</title>
  <meta name="description" content={description} />
  
  <script is:inline>
    // Inicializar tema antes de renderizar para evitar flash
    const theme = localStorage.getItem('theme');
    if (theme === 'light' || (theme === 'system' && !window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      document.documentElement.classList.remove('dark');
    }
  </script>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    body {
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }
  </style>
</head>
<body class="min-h-screen bg-background text-foreground antialiased">
  <div class="flex h-screen overflow-hidden">
    <Sidebar currentPath={currentPath} isAdmin={isAdmin} />
    
    <div class="flex flex-1 flex-col overflow-hidden md:ml-64" id="main-content">
      <Header title={title} />
      
      <main class="flex-1 overflow-auto p-6">
        {description && (
          <div class="mb-6">
            <p class="text-muted-foreground" id="page-description">{description}</p>
          </div>
        )}
        <slot />
      </main>
    </div>
  </div>
  <Toast />
  <CommandMenu client:idle />
</body>
</html>
